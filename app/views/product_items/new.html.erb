  <div>
    <%= f.label :quantity, 'Quantidade'%>
    <%= f.number_field :quantity%>
  </div>

  <div>
    <%= f.label :warehouse_id, 'GalpÃ£o destino'%>
    <%= f.collection_select(:warehouse_id, Warehouse.all, :id, :code)%>
