<h3>Novo fornecedor</h3>
<div style="width: 46rem;">
 <% unless @errors == []%>
    <div class="alert alert-warning">
      <ul>
        <% @errors.each do |msg| %>
          <li><%=msg%></li>
        <%end%>
      </ul>
    </div>
  <% end %>

  <%= form_with(model: @provider) do |f|%>
    <div class="form-group">
      <%= f.label :trading_name, 'Nome fantasia'%>
      <%=f.text_field :trading_name, class: 'form-control'%>
    </div>
    <br>
    <div class="form-group">
      <%= f.label :company_name, 'Razão social'%>
      <%=f.text_field :company_name, class: 'form-control'%>
    </div>
    <br>
    <div class="form-group">
      <%= f.label :cnpj, 'CNPJ'%>
      <%=f.text_field :cnpj, class: 'form-control'%>
    </div>
    <br>
    <div class="form-group">
      <%= f.label :address, 'Endereço'%>
      <%=f.text_field :address, class: 'form-control'%>
    </div>
    <br>
    <div class="form-group">
      <%= f.label :email, 'Email'%>
      <%=f.text_field :email, class: 'form-control'%>
    </div>
    <br>
    <div class="form-group">
      <%= f.label :phone, 'Telefone'%>
      <%=f.text_field :phone, class: 'form-control'%>
    </div>
    <br> 
    <%= f.submit 'Gravar', class: 'btn btn-success'%>
  <%end%>
</div>