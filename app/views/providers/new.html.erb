<h3>Novo fornecedor</h3>

<ul>
  <% @provider.errors.full_messages.each do |msg| %>
    <li><%=msg%></li>
  <%end%>
</ul>

<%= form_with(model: @provider) do |f|%>

  <div>
    <%= f.label :trading_name, 'Nome fantasia'%>
    <%=f.text_field :trading_name%>
  </div>

  <div>
    <%= f.label :company_name, 'Razão social'%>
    <%=f.text_field :company_name%>
  </div>

  <div>
    <%= f.label :cnpj, 'CNPJ'%>
    <%=f.text_field :cnpj%>
  </div>

  <div>
    <%= f.label :address, 'Endereço'%>
    <%=f.text_field :address%>
  </div>

  <div>
    <%= f.label :email, 'Email'%>
    <%=f.text_field :email%>
  </div>

  <div>
    <%= f.label :phone, 'Telefone'%>
    <%=f.text_field :phone%>
  </div>
  
  <%= f.submit 'Gravar'%>
<%end%>