<h3>Novo galpão</h3>

<div style="width: 46rem;">
  <% unless @errors == []%>
    <div class="alert alert-warning">
      <ul>
        <% @errors.each do |msg| %>
          <li><%=msg%></li>
        <%end%>
      </ul>
    </div>
  <% end %>

  <%= form_with(model: @warehouse) do |f|%>
    <div class="form-group">
      <%= f.label :name, 'Nome'%>
      <%=f.text_field :name, class: 'form-control'%>
    </div>
    <br>
    <div class="form-group">
      <%= f.label :code, 'Código'%>
      <%=f.text_field :code, class: 'form-control'%>
    </div>
    <br>
    <div class="form-group">
      <%= f.label :description, 'Descrição'%>
      <%=f.text_area :description, class: 'form-control', style: 'resize: none;'%>
    </div>
    <br>
    <div class="form-group">
      <%= f.label :postal_code, 'CEP'%>
      <%=f.text_field :postal_code, class: 'form-control'%>
    </div>
    <br>
    <div class="form-group">
      <%= f.label :total_area, 'Área total'%>
      <%=f.number_field :total_area, class: 'form-control'%>
    </div>
    <br>
    <div class="form-group">
      <%= f.label :useful_area, 'Área útil'%>
      <%=f.number_field :useful_area, class: 'form-control'%>
    </div>
    <br>
    <div>
      <%=f.submit 'Cadastrar', class: 'btn btn-success'%>
    </div>
  <% end %>
</div>