<h1><%= @category.name %></h1>

<% if @category.product_models.empty? %>
  <p>Nenhum produto cadastrado nessa categoria</p>
<% else %>
  <ul>
    <% @category.product_models.each do |product| %>
      <li><%= link_to product.name, product_model_path(product.id) %></li>
    <% end %>
  </ul>
<% end %>

<% if @warehouses.empty? %>
  <p>Nenhum galpão cadastrado nessa categoria</p>
<% else %>
  <table>
    <tr>
      <th>Nome</th>
      <th>Código</th>
      <th>Cep</th>
    </tr>
    <% @warehouses.each do |warehouse| %>
      <tr>
        <td><%= warehouse.name %></td>
        <td><%= warehouse.code %></td>
        <td><%= warehouse.postal_code %></td>
      </tr>
    <% end %>
  </table>
<% end %>